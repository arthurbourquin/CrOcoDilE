<script>


function ShowInfos(){
if(document.getElementById('DispInfos').style.display == 'none'){
document.getElementById('DispInfos').style.display = 'inline';
} else {
document.getElementById('DispInfos').style.display = 'none';
}}

let Cartons;

// Update Cartons
document.getElementById('DispUserInput').addEventListener('input', UpdateCartons);
function UpdateCartons() {
Cartons = document.getElementById('DispUserInput').value;
//document.getElementById('test').innerText = document.getElementById('DispUserInput').value;
Cartons = Cartons.split('\n');
for(let i = 0; i < Cartons.length; i++){
Cartons[i] = Cartons[i].split(';;');
document.getElementById('test').innerText = Cartons;
}}






</script>
